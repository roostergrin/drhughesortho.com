.custom-community-intro
  .custom-community-intro__background
    .custom-community-intro__container
      .custom-community-intro__title(v-html='props.title')
      .custom-community-intro__row(v-for='(row, i) in props.rows', :key='i')
        .custom-community-intro__col
          .custom-community-intro__content(v-html='row.content')
        .custom-community-intro__col
          .custom-community-intro__image-mask(v-waypoint='{ active: true, callback: onWaypointImage }')
            .custom-community-intro__image(:style="{ backgroundImage: 'url(' + row.image + ') '}")
